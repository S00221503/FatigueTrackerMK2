<Window x:Class="WpfFatigueMK2.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFatigueMK2"
        mc:Ignorable="d"
        Title="Login"
        Height="350"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2"
        FontFamily="Segoe UI"
        FontSize="14">

    <Border Margin="20"
            Padding="20"
            Background="White"
            CornerRadius="10"
            BorderBrush="#DADADA"
            BorderThickness="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Username Label -->
                <RowDefinition Height="Auto"/>
                <!-- Username Box -->
                <RowDefinition Height="Auto"/>
                <!-- Password Label -->
                <RowDefinition Height="Auto"/>
                <!-- Password Box -->
                <RowDefinition Height="Auto"/>
                <!-- Button -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Login"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Grid.Row="0"/>

            <!-- Username -->
            <TextBlock Text="Username"
                       Margin="0,0,0,5"
                       Grid.Row="1"/>
            <TextBox x:Name="UsernameBox"
                     Margin="0,0,0,10"
                     Height="30"
                     Grid.Row="2"/>

            <!-- Password -->
            <TextBlock Text="Password"
                       Margin="0,0,0,5"
                       Grid.Row="3"/>
            <PasswordBox x:Name="PasswordBox"
                         Margin="0,0,0,15"
                         Height="30"
                         Grid.Row="4"/>

            <!-- Button -->
            <Button Content="Login"
                    Grid.Row="5"
                    Height="35"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Login_Click"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Width="100"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
