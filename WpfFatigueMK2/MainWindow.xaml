<Window x:Class="WpfFatigueMK2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFatigueMK2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        Closing="Window_Closing">
    <Border BorderBrush="Black" BorderThickness="20,20,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Left: Substitutes -->
                <ColumnDefinition Width="*" />
                <!-- Middle: Players grid -->
                <ColumnDefinition Width="Auto" />
                <!-- Right: Weather -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Top: Weather -->
                <RowDefinition Height="*" />
                <!-- Middle: Players -->
                <RowDefinition Height="Auto" />
                <!-- Bottom: Fatigue info -->
            </Grid.RowDefinitions>

            <!-- Weather Conditions TextBox (Top-Right) -->
            <TextBox x:Name="WeatherConditionTextBox"
                     Grid.Column="2"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="10"
                     Width="180"
                     Text="Loading..."
                     IsReadOnly="True"
                     TextAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0" />

            <!-- Substitutes ListBox with Label (Left) -->
            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
                <TextBlock Text="Substitutes"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />
                <ListBox x:Name="SubstitutesListBox"
                         Width="150"
                         Height="400" />
            </StackPanel>

            <!-- Jersey Buttons Grid (Center) -->
            <UniformGrid x:Name="PlayerGrid"
                         Grid.Column="1"
                         Grid.Row="1"
                         Rows="3"
                         Columns="5"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="10" />

            <!-- Fatigue Display (Bottom-Center) -->
            <StackPanel Grid.Column="1" Grid.Row="2" 
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="10">
                <ProgressBar x:Name="FatigueProgressBar"
                             Width="200"
                             Height="20"
                             Minimum="0"
                             Maximum="100"
                             Value="100"
                             Margin="0,10,0,0" />

                <TextBlock x:Name="FatigueLevelText"
                           Text="Fatigue Level: Normal (Player is fine)"
                           FontSize="14"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
            <Button x:Name="StartMatchButton"
        Grid.Row="2"
        Content="Start Match"
        Width="120"
        Height="30"
        Margin="0,7,0,37"
        Click="StartMatchButton_Click"
        HorizontalAlignment="Center" />

            <Button x:Name="EndMatchButton"
        Content="End Match"
        Width="100"
        Height="30"
        Margin="50,7,50,37"
        Click="EndMatchButton_Click" Grid.Column="2" Grid.Row="2" />

        </Grid>
    </Border>
</Window>
